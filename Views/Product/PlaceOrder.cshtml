@{
    ViewBag.Title = "Purchase Result";
}
<!-- Display the message based on success or failure -->
@if (ViewBag.IsPurchaseSuccessful)
{
    <div class="alert alert-success">
        <strong>Success!</strong> Your purchase has been completed successfully.
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Error!</strong> There was an issue processing your purchase.
    </div>
}

<!-- Return to Cart Button -->
<a href="@Url.Action("Cart", "Product")" class="btn btn-primary">Return to Cart</a>
